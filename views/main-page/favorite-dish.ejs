<%- include('includes/head.ejs') %>

    <!-- Start Menu -->
	<div id="menu" class="menu-box">
		<div class="container">
			<div class="row">
				<div class="col-lg-12">
					<div class="heading-title text-center">
						<h2>CÔNG THỨC ĐÃ LƯU</h2>
						<div class="blog-search-form">
							<input name="search" placeholder="Nhập tên món ăn" type="text" >
							<button class="search-btn">
								<i class="fa fa-search" aria-hidden="true"></i>
							</button>
						</div>
						<!-- <p>Lorem Ipsum is simply dummy text of the printing and typesetting</p> -->
					</div>
				</div>
			</div>
			<div class="row">
				<div class="col-lg-12">
					<div class="special-menu text-center">
						<div class="button-group filter-button-group">
							<button class="active" data-filter="*">Tất cả</button>
							<button data-filter=".lunch">Món mặn</button>
							<button data-filter=".lunch">Món ngọt</button>
							<button data-filter=".dinner">Món nước</button>
							<button data-filter=".dinner">Món tráng miệng</button>
						</div>
					</div>
				</div>
			</div>
				
			<% if (dishes.length > 0) { %>
                <div class="grid">
                    <% for (let dish of dishes) { %>
                        <article class="card product-item" onclick="window.location.href = '/dishes/<%= dish._id %>'">
                            <header class="card__header">
                                <h1 class="product__title">
                                    <%= dish.name %>
                                </h1>
                            </header>
                            <div class="card__image">
                                <img src="/<%= dish.image %>" alt="<%= dish.name %>">
                            </div>
                            
                            <div class="card__actions">
                                <!-- <a href="/admin/edit-product" class="save-btn">Edit</a> -->
								<form action="/delete-favorite-dish" method="post">
									<button class="save-btn" type="submit"><i class="fa-solid fa-trash"></i></button>
									<input type="hidden" name="dishId" value="<%= dish._id  %>">
								  </form>

                            </div>
                        </article>
                        <% } %>
                </div>

				<div class="pagination text-center">
					<nav aria-label="Page navigation">
						<ul class="pagination">
							<% if (currentPage !== 1 && previousPage !== 1) { %>
								<li class="page-item">
									<a class="page-link" href="/favorite-dish/?page=1">1</a>
								</li>
							<% } %>
							<% if (hasPreviousPage) { %>
								<li class="page-item">
									<a class="page-link" href="/favorite-dish/?page=<%= previousPage %>"><%= previousPage %></a>
								</li>
							<% } %>
							<li class="page-item active">
								<span class="page-link"><%= currentPage %></span>
							</li>
							<% if (hasNextPage) { %>
								<li class="page-item">
									<a class="page-link" href="/favorite-dish/?page=<%= nextPage %>"><%= nextPage %></a>
								</li>
							<% } %>
							<% if (currentPage !== lastPage && nextPage !== lastPage) { %>
								<li class="page-item">
									<a class="page-link" href="/favorite-dish/?page=<%= lastPage %>"><%= lastPage %></a>
								</li>
							<% } %>
						</ul>
					  </nav>
				
				</div>
			<% } else { %>
				<h1>Không tìm thấy món ăn!</h1>
			<% } %>	

		</div>
	</div>
	<!-- End Menu -->

    <%- include('includes/end.ejs') %>