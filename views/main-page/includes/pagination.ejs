<div class="pagination text-center">
    <nav aria-label="Page navigation">
        <ul class="pagination">
            <% if (searchTerm !== null) { %>
                <% if (currentPage !== 1 && previousPage !== 1) { %>
                    <li class="page-item">
                        <a class="page-link" href="<%= `${path}?search=${searchTerm}&page=1&filter=${encodeURIComponent(filter)}` %>">1</a>
                    </li>
                <% } %>
                <% if (hasPreviousPage) { %>
                    <li class="page-item">
                        <a class="page-link" href="<%= `${path}?search=${searchTerm}&page=${previousPage}&filter=${encodeURIComponent(filter)}` %>"><%= previousPage %></a>
                    </li>
                <% } %>
                <li class="page-item active">
                    <span class="page-link"><%= currentPage %></span>
                </li>
                <% if (hasNextPage) { %>
                    <li class="page-item">
                        <a class="page-link" href="<%= `${path}?search=${searchTerm}&page=${nextPage}&filter=${encodeURIComponent(filter)}` %>"><%= nextPage %></a>
                    </li>
                <% } %>
                <% if (currentPage !== lastPage && nextPage !== lastPage) { %>
                    <li class="page-item">
                        <a class="page-link" href="<%= `${path}?search=${searchTerm}&page=${lastPage}&filter=${encodeURIComponent(filter)}` %>"><%= lastPage %></a>
                    </li>
                <% } %>
            <% } else { %>
                <% if (currentPage !== 1 && previousPage !== 1) { %>
                    <li class="page-item">
                        <a class="page-link" href="<%= `${path}?search=${searchTerm}&page=1&filter=${encodeURIComponent(filter)}` %>">1</a>
                    </li>
                <% } %>
                <% if (hasPreviousPage) { %>
                    <li class="page-item">
                        <a class="page-link" href="<%= `${path}?search=${searchTerm}&page=${previousPage}&filter=${encodeURIComponent(filter)}` %>"><%= previousPage %></a>
                    </li>
                <% } %>
                <li class="page-item active">
                    <span class="page-link"><%= currentPage %></span>
                </li>
                <% if (hasNextPage) { %>
                    <li class="page-item">
                        <a class="page-link" href="<%= `${path}?search=${searchTerm}&page=${nextPage}&filter=${encodeURIComponent(filter)}` %>"><%= nextPage %></a>
                    </li>
                <% } %>
                <% if (currentPage !== lastPage && nextPage !== lastPage) { %>
                    <li class="page-item">
                        <a class="page-link" href="<%= `${path}?search=${searchTerm}&page=${lastPage}&filter=${encodeURIComponent(filter)}` %>"><%= lastPage %></a>
                    </li>
                <% } %>
            <% } %>
        </ul>
        
      </nav>

</div>