                                            <form action="/admin/dish-management-search" method="GET">
                                                <div class="management-search-right">
                                                    <input name="search" placeholder="<%= searchTerm !== null ? searchTerm : 'Nhập tên món ăn' %>" d="site-search" name="q">								
                                                    <button class="search-btn">
                                                        <i class="fa fa-search" aria-hidden="true"></i>
                                                    </button>
                                                </div>
                                            </form>

                                        </div>
                                        
                                        <hr>
                                        <ul class="nav nav-tabs" id="myTab" role="tablist">
                                        <% if (searchTerm !== null) { %>
                                            <li class="nav-item">
                                                <button class="nav-link <%= filter === undefined || filter === 'undefined' ? 'active' : '' %>" id="home-tab" onclick="window.location.href = '<%= `${path}?search=${searchTerm}` %>'" role="tab" aria-controls="home" aria-selected="true">Tất cả</button>
                                            </li>
                                            <li class="nav-item">
                                                <button class="nav-link <%= filter === 'Món mặn' ? 'active' : '' %>" id="profile-tab" onclick="window.location.href = '<%= `${path}?search=${searchTerm}&filter=Món mặn` %>'" role="tab" aria-controls="profile" aria-selected="false">Món mặn</button>
                                            </li>
                                            <li class="nav-item">
                                                <button class="nav-link <%= filter === 'Món ngọt' ? 'active' : '' %>" id="contact-tab" onclick="window.location.href = '<%= `${path}?search=${searchTerm}&filter=Món ngọt` %>'" role="tab" aria-controls="contact" aria-selected="false">Món ngọt</button>
                                            </li>
                                            <li class="nav-item">
                                                <button class="nav-link <%= filter === 'Món nước' ? 'active' : '' %>" id="contact-tab" onclick="window.location.href = '<%= `${path}?search=${searchTerm}&filter=Món nước` %>'" role="tab" aria-controls="contact" aria-selected="false">Món nước</button>
                                            </li>
                                        <% } else { %>
                                            <li class="nav-item">
                                                <button class="nav-link <%= filter === undefined || filter === 'undefined' ? 'active' : '' %>" id="home-tab" onclick="window.location.href='<%= path %>'" role="tab" aria-controls="home" aria-selected="true">Tất cả</button>
                                            </li>
                                            <li class="nav-item">
                                                <button class="nav-link <%= filter === 'Món mặn' ? 'active' : '' %>" id="profile-tab" onclick="window.location.href='<%= path %>?filter=Món mặn'" role="tab" aria-controls="profile" aria-selected="false">Món mặn</button>
                                            </li>
                                            <li class="nav-item">
                                                <button class="nav-link <%= filter === 'Món ngọt' ? 'active' : '' %>" id="contact-tab" onclick="window.location.href='<%= path %>?filter=Món ngọt'" role="tab" aria-controls="contact" aria-selected="false">Món ngọt</button>
                                            </li>
                                            <li class="nav-item">
                                                <button class="nav-link <%= filter === 'Món nước' ? 'active' : '' %>" id="contact-tab" onclick="window.location.href='<%= path %>?filter=Món nước'" role="tab" aria-controls="contact" aria-selected="false">Món nước</button>
                                            </li>
                                        <% } %>
                                        </ul>

                                        <div class="tab-content" id="myTabContent">
                                            <div class="card-block px-0 py-3">
                                                <div class="table-responsive">
                                                    <table class="table table-hover">
                                                        <tbody>
                                                            <p>Tìm thấy <%= dishes.length %> kết quả phù hợp</p>
                                                            <% if (dishes.length > 0) { %>
                                                                <% let count = 1; %>
                                                                <% for (let dish of dishes) { %>
                                                                    <tr class="unread">
                                                                        <td class="mb-1"><%= count %></td>
                                                                        <td>
                                                                            <div class="d-flex align-items-center">
                                                                                <img class="rounded thumbnail-image" style="width:80px;" src="/<%= dish.image %>" alt="dish-image">
                                                                                <div class="ml-3">
                                                                                    <h6 class="mb-1"><%= dish.name %></h6>
                                                                                    <!-- <p class="m-0"><%= dish._id %></p> -->
                                                                                </div>
                                                                            </div>
                                                                        </td>
                                                                        <td class="text-right">
                                                                            <a href="/dishes/<%= dish._id  %>" class="label theme-bg text-white f-12">Xem</a>
                                                                            <a href="/admin/edit-dish/<%= dish._id  %>?edit=true" class="label theme-bg2 text-white f-12">Sửa</a>
                                                                            <input type="hidden" value="<%= dish._id  %>" name="dishId">
                                                                            <button type="button" class="label bg-danger text-white f-12" onclick="deleteDish(this)">Xoá</button>
                                                                        </td>                                                                
                                                                    </tr>
                                                                    <% count++; %>
                                                                <% } %>
                                                            <% } %>
                                                        
                                                            
