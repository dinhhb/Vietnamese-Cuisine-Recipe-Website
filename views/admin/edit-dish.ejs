<%- include('includes/head.ejs') %>

    <%- include('includes/navigation.ejs') %>
        <!-- [ Main Content ] start -->
        <div class="pcoded-main-container">
            <div class="pcoded-wrapper">
                <div class="pcoded-content">
                    <div class="pcoded-inner-content">

                        <div class="main-body">
                            <div class="page-wrapper">
                                <!-- [ Main Content ] start -->
                                <div class="row">
                                    <div class="col-sm-12">
                                        <div class="card">
                                            <div class="card-header">
                                                <% if (editing) { %>
                                                    <h5>Sửa món</h5>
                                                <% } else { %>
                                                    <h5>Thêm món</h5>
                                                <% } %>
                                            </div>
                                            <div class="card-body">
                                                <!-- <h5>Form controls</h5>
                                            <hr> -->
                                                <form
                                                    action="/admin/<% if (editing) { %>edit-dish<% } else { %>add-dish<% } %>"
                                                    method="POST"
                                                    enctype="multipart/form-data">
                                                    <% if (errorMessage) {%>
                                                        <div class="user-message user-message--error">
                                                            <%= "Dữ liệu không hợp lệ. Xin hãy thử lại" %>
                                                        </div>
                                                        <% } %>
                                                            <div class="row">

                                                                <div class="col-md-6">

                                                                    <div class="form-group">
                                                                        <% if (hasError) {
                                                                            const err=validationErrors.find(e=> e.path === 'name');
                                                                            if (err) { %>
                                                                                <div class="error-text">
                                                                                    <%= err.msg %>
                                                                                </div>
                                                                            <% } %>
                                                                        <% } %>
                                                                        <label class="bold-label">Tên món ăn</label>
                                                                        <input type="text" name="name"
                                                                            class="form-control" placeholder="phở"
                                                                            value="<% if (editing || hasError) { %><%= dish.name %><% } %>">
                                                                        <hr style="border-top: 1px solid #ccc;">
                                                                    </div>
                                                                    <div class="form-group">
                                                                        <% if (hasError) {
                                                                            const err=validationErrors.find(e=> e.path === 'ingredients');
                                                                            if (err) { %>
                                                                                <div class="error-text">
                                                                                    <%= err.msg %>
                                                                                </div>
                                                                            <% } %>
                                                                        <% } %>
                                                                        <label class="bold-label">Nguyên liệu</label><br>
                                                                        <% for (let i = 0; i < 15; i++) { %>
                                                                            <label>Nguyên liệu <%= i + 1 %> <%= i === 0 ? '(Bắt buộc)' : '(Tuỳ chọn)' %></label>
                                                                            <input type="text" name="ingredients"
                                                                                class="form-control"
                                                                                placeholder="Định dạng: 'Số lượng,Đơn vị,Nguyên liệu'"
                                                                                value="<% if (editing || hasError) { %><%= dish.ingredients[i] || '' %><% } %>"
                                                                                style="margin-bottom: 15px;">
                                                                        <% } %>

                                                                    </div>


                                                                </div>
                                                                <div class="col-md-6">

                                                                    <div class="form-group">
                                                                        <% if (hasError) {
                                                                            const err=validationErrors.find(e=> e.path === 'image');
                                                                            if (err) { %>
                                                                                <div class="error-text">
                                                                                    <%= err.msg %>
                                                                                </div>
                                                                            <% } %>
                                                                        <% } %>
                                                                        <label class="bold-label">Ảnh</label><br>
                                                                        <input type="file" name="image" id="image" accept="image/png, image/gif, image/jpeg" >
                                                                        <hr style="border-top: 1px solid #ccc;">
                                                                    </div> 
                                                                    
                                                                    <div class="form-group">
                                                                        <label for="exampleFormControlSelect1" class="bold-label">Loại
                                                                            món</label>
                                                                        <select class="form-control" name="type"
                                                                            id="exampleFormControlSelect1">
                                                                            <option value="Món mặn" <% if (editing &&
                                                                                dish.type==='Món mặn' ) { %>selected<% }
                                                                                    %>>Món
                                                                                    mặn</option>
                                                                            <option value="Món ngọt" <% if (editing &&
                                                                                dish.type==='Món ngọt' ) { %>selected<%
                                                                                    } %>>Món
                                                                                    ngọt</option>
                                                                            <option value="Món nước" <% if (editing &&
                                                                                dish.type==='Món nước' ) { %>selected<%
                                                                                    } %>>Món
                                                                                    nước</option>
                                                                            <option value="Món tráng miệng" <% if
                                                                                (editing &&
                                                                                dish.type==='Món tráng miệng' ) { %>
                                                                                selected<% } %>>Món
                                                                                    tráng miệng</option>
                                                                        </select>
                                                                        <hr style="border-top: 1px solid #ccc;">
                                                                    </div>

                                                                    <div class="form-group">
                                                                        <% if (hasError) {
                                                                            const err=validationErrors.find(e=> e.path === 'steps');
                                                                            if (err) { %>
                                                                                <div class="error-text">
                                                                                    <%= err.msg %>
                                                                                </div>
                                                                            <% } %>
                                                                        <% } %>
                                                                        <label class="bold-label">Quy trình chế biến</label><br>
                                                                        <% for (let i=0; i < 10; i++) { %>
                                                                            <label>Bước <%= i + 1 %> <%= i === 0 ? '(Bắt buộc)' : '(Tuỳ chọn)' %></label>
                                                                            <textarea class="form-control" placeholder="abc" name="steps" style="margin-bottom: 15px;"><% if (editing || hasError) { %><%= dish.steps[i] || '' %><% } %></textarea>
                                                                        <% } %>
                                                                        <hr style="border-top: 1px solid #ccc;">
                                                                        
                                                                    </div>

                                                                    <div class="form-group">
                                                                        <% if (hasError) {
                                                                            const err=validationErrors.find(e=> e.path === 'requirement');
                                                                            if (err) { %>
                                                                                <div class="error-text">
                                                                                    <%= err.msg %>
                                                                                </div>
                                                                            <% } %>
                                                                        <% } %>
                                                                        <label class="bold-label">Yêu cầu cảm quan</label>
                                                                        <textarea name="requirement"
                                                                        class="form-control"
                                                                        placeholder="Ngon"><% if (editing || hasError) { %><%= dish.requirement %><% } %></textarea>

                                                                    </div>
                                                                </div>
                                                            </div>
                                                            <% if (editing) { %>
                                                                <input type="hidden" value="<%= dish._id %>"
                                                                    name="dishId">
                                                            <% } %>
                                                                    <div class="text-center">
                                                                        <button type="submit" class="btn btn-primary">
                                                                            <% if (editing) { %>
                                                                                Sửa món
                                                                            <% } else { %>
                                                                                Thêm món
                                                                            <% } %>
                                                                        </button>
                                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- [ Main Content ] end -->
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- [ Main Content ] end -->


            <%- include('includes/end.ejs') %>